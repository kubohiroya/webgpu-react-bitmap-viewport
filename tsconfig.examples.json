{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist/examples",
    "baseUrl": ".",
    "types": ["node", "vite/client", "@webgpu/types"],
    "esModuleInterop": true,
    "composite": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "./src/**/*",
    "./examples/src/**/*.ts",
    "./examples/src/**/*.tsx"
  ]
}
