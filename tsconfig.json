{
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "allowJs": false,
    "esModuleInterop": true,
    "strict": true,
    "types": ["node", "@webgpu/types", "vite/client"],
    "composite": true
  },
  "references": [
    {
      "path": "./tsconfig.examples.json"
    }
  ],
  "compileOnSave": false,
  "include": ["src/**/*.ts", "src/**/*.tsx", "examples/src/**/*.ts", "examples/src/**/*.tsx", "examples/src/**/*.wgsl"],
}
